{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-other" data-toggle="tab">{{ tab_other }}</a></li>
            <li><a href="#tab-status" data-toggle="tab">{{ tab_order_status }}</a></li>
            <li><a href="#tab-information" data-toggle="tab">{{ tab_information }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-title"><span data-toggle="tooltip" title="{{ help_title_tag }}">{{ entry_title }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_two_title" value="{{ payment_two_title }}" placeholder="{{ entry_title }}" id="entry-title" class="form-control"/>
                  {% if error_title %}
                  <div class="text-danger">{{ error_title }}</div>
                  {% endif %}
                </div>
              </div>
			       <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-sub-title"><span data-toggle="tooltip" title="{{ help_subtitle_tag }}">{{ entry_sub_title }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_two_sub_title" value="{{ payment_two_sub_title }}" placeholder="{{ entry_sub_title }}" id="entry-sub-title" class="form-control"/>
                  {% if error_sub_title %}
                  <div class="text-danger">{{ error_sub_title }}</div>
                  {% endif %}
                </div>
              </div>
			        <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-merchant-id"><span data-toggle="tooltip" title="{{ help_merchantid_tag }}">{{ entry_merchant_id }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_two_merchant_id" value="{{ payment_two_merchant_id }}" placeholder="{{ entry_merchant_id }}" id="entry-merchant-id" class="form-control"/>
                  {% if error_merchant_id %}
                  <div class="text-danger">{{ error_merchant_id }}</div>
                  {% endif %}
                </div>
              </div>
			        <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-api-key"><span data-toggle="tooltip" title="{{ help_apikey_tag }}">{{ entry_api_key }}</span></label>
                <div class="col-sm-10">
                  <input type="password" name="payment_two_api_key" value="{{ payment_two_api_key }}" placeholder="{{ entry_api_key }}" id="entry-api-key" class="form-control"/>
                  {% if error_api_key %}
                  <div class="text-danger">{{ error_api_key }}</div>
                  {% endif %}
                </div>
              </div>			  
			        <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-choose-product"><span data-toggle="tooltip" title="{{ help_product_tag }}">{{ entry_choose_product }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_choose_product" id="input-canceled-reversal-status" class="form-control">
                  {% if payment_two_choose_product == 'FUNDED_INVOICE' %}
        				  <option value="FUNDED_INVOICE" selected="selected">{{ entry_funded_invoice }}</option>
        				  {% else %}
        				  <option value="FUNDED_INVOICE">{{ entry_funded_invoice }}</option>
        				  {% endif %}
        				  {% if payment_two_choose_product == 'DIRECT_INVOICE' %}
        					<option value="DIRECT_INVOICE" selected="selected">{{ entry_direct_invoice }}</option>
        				  {% else %}	
        					<option value="DIRECT_INVOICE">{{ entry_direct_invoice }}</option>
        				  {% endif %}
                  </select> 
                </div>
              </div>
			        <div class="form-group required">
                <label class="col-sm-2 control-label" for="entry-invoice-days"><span data-toggle="tooltip" title="{{ help_invoice_tag }}">{{ entry_invoice_days }}</span></label>
                <div class="col-sm-10">
				          <input type="text" name="payment_two_invoice_days" value="{{ payment_two_invoice_days }}" placeholder="{{ entry_invoice_days }}" id="entry-api-key" class="form-control"/>
                </div>
              </div>
			        <div class="form-group">
				        <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
        				<div class="col-sm-10">
        				  <input type="text" name="payment_two_total" value="{{ payment_two_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
        				</div>
			        </div>
      			  <div class="form-group">
        				<label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
        				<div class="col-sm-10">
        				  <select name="payment_two_geo_zone_id" id="input-geo-zone" class="form-control">
        					<option value="0">{{ text_all_zones }}</option>
        					{% for geo_zone in geo_zones %}
        					{% if geo_zone.geo_zone_id == payment_two_geo_zone_id %}
        					<option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
        					{% else %}
        					<option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
        					{% endif %}
        					{% endfor %}
        				  </select>
        				</div>
      			  </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-debug"><span data-toggle="tooltip" title="{{ help_debug }}">{{ entry_debug }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_debug" id="input-debug" class="form-control">
                    {% if payment_two_debug %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_two_status" id="input-status" class="form-control">
                    {% if payment_two_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_two_sort_order" value="{{ payment_two_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-other">
              <div class="form-group {% if not two_host %}hidden{% endif %}">
                <label class="col-sm-2 control-label" for="input-staging-server">{{ entry_staging_server }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_two_staging_server" value="{{ payment_two_staging_server }}" placeholder="{{ payment_two_staging_server }}" id="input-staging-server" class="form-control"/>
                </div>
              </div>
              <div class="form-group required {% if two_host %}hidden{% endif %}">
                <label class="col-sm-2 control-label" for="input-mode"><span data-toggle="tooltip" title="{{ help_paymentmode_tag }}">{{ entry_mode }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_mode" id="input-mode" class="form-control">		  
                  {% if payment_two_mode %}
        				  <option value="1" selected="selected">{{ text_production }}</option>
        					<option value="0">{{ text_test }}</option>
        					{% else %}
        					<option value="1">{{ text_production }}</option>
        					<option value="0" selected="selected">{{ text_test }}</option>
        					{% endif %}
                  </select> 
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-completed-status"><span data-toggle="tooltip" title="{{ help_autocomplete_tag }}">{{ entry_company_auto_complete }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_company_name" id="input-completed-status" class="form-control">
          				  {% if payment_two_company_name == '0'%}	  
          				  <option value="1">{{ entry_yes }}</option>
          				  <option value="0" selected="selected">{{ entry_no }}</option>
                    {% else %}				   
                    <option value="1" selected="selected">{{ entry_yes }}</option>
          				  <option value="0">{{ entry_no }}</option>               
          				  {% endif %}
                  </select>
                </div>
              </div>
			        <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-completed-status"><span data-toggle="tooltip" title="{{ help_orgcomplete_tag }}">{{ entry_company_org_complete }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_company_org" id="input-completed-status" class="form-control">
				          {% if payment_two_company_org == '0'%}
                   <option value="1">{{ entry_yes }}</option>
				           <option value="0" selected="selected">{{ entry_no }}</option>
                  {% else %}				   
                   <option value="1" selected="selected">{{ entry_yes }}</option>
				            <option value="0">{{ entry_no }}</option>
				          {% endif %}
                  </select>
                </div>
              </div>
			  
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-completed-status"><span data-toggle="tooltip" title="{{ help_purchasedorder_tag }}">{{ entry_purchased_order_shipped }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_purchased_order_shipped" id="input-completed-status" class="form-control">
				            {% if payment_two_purchased_order_shipped == '0'%}
                    <option value="1">{{ entry_yes }}</option>
				            <option value="0" selected="selected">{{ entry_no }}</option>
                    {% else %}				   
                   <option value="1" selected="selected">{{ entry_yes }}</option>
          				   <option value="0">{{ entry_no }}</option>
          				  {% endif %}
                  </select>
                </div>
              </div>
			  
			        <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-completed-status"><span data-toggle="tooltip" title="{{ help_checkout_tag }}">{{ entry_pre_approve_checkout }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_pre_approve_checkout" id="input-completed-status" class="form-control">
        				  {% if payment_two_pre_approve_checkout == '0'%}
                    <option value="1">{{ entry_yes }}</option>
        				   <option value="0" selected="selected">{{ entry_no }}</option>
                   {% else %}				   
                   <option value="1" selected="selected">{{ entry_yes }}</option>
        				   <option value="0">{{ entry_no }}</option>
        				  {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-completed-status"><span data-toggle="tooltip" title="{{ help_paymentrefund_tag }}">{{ entry_initiate_payment_refund }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_two_initiate_payment_refund" id="input-completed-status" class="form-control">
				          {% if payment_two_initiate_payment_refund == '0'%}
                   <option value="1">{{ entry_yes }}</option>
				            <option value="0" selected="selected">{{ entry_no }}</option>
                  {% else %}				   
                   <option value="1" selected="selected">{{ entry_yes }}</option>
                  <option value="0">{{ entry_no }}</option>
                  {% endif %}
                  </select>
                </div>
              </div>	  
            </div><!--tab-other-->
			      <div class="tab-pane" id="tab-status">
      			  <div class="form-group">
        				<label class="col-sm-2 control-label" for="input-verify-order-status">{{ entry_verify_order_status }}</label>
        				<div class="col-sm-10">
        				  <select name="payment_two_verified_status_id" id="input-verify-order-status" class="form-control">
          					{% for order_status in order_statuses %}
          					{% if order_status.order_status_id == payment_two_verified_status_id %}
          					<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
          					{% else %}
          					<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
          					{% endif %}
          					{% endfor %}
        				  </select>
        				</div>
      			  </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-unverify-order-status">{{ entry_unverify_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_two_unverified_status_id" id="input-unverify-order-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_two_unverified_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-failed-order-status">{{ entry_failed_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_two_failed_status_id" id="input-failed-order-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_two_failed_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-canceled-order-status">{{ entry_canceled_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_two_canceled_status_id" id="input-canceled-order-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_two_canceled_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-refunded-order-status">{{ entry_refunded_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_two_refunded_status_id" id="input-refunded-order-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_two_refunded_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-shipped-order-status">{{ entry_shipped_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_two_shipped_status_id" id="input-shipped-order-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_two_shipped_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-delivered-order-status">{{ entry_delivered_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_two_delivered_status_id" id="input-delivered-order-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_two_delivered_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>		
            </div>
            <div class="tab-pane" id="tab-information">
              <ul class="nav-pills nav-stacked">
                <li>Version: 1.1.3</li>
                <li><a href="https://docs.two.inc/developer-portal/plugins/opencart" target="_blank"> User Guide</a></li>
                <li><a href="https://www.two.inc/faq" target="_blank"> FAQs</a></li>
                <li><a href="https://github.com/tillit-dot-ai/opencart" target="_blank"> Changelog</a></li>
                <li><a href="https://github.com/tillit-dot-ai/opencart/releases" target="_blank"> Check Latest Version</a></li>
              </ul>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}